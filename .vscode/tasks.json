{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/VideoGate/VideoGate.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/VideoGate/VideoGate.csproj"
            ],
            "problemMatcher": "$tsc"
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/VideoGate.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-app",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/VideoGate/VideoGate.cproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-tests",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/VideoGate.Tests/VideoGate.Tests.cproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-app",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "${workspaceFolder}/VideoGate/VideoGate.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-debug-app",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Debug",
                "${workspaceFolder}/VideoGate/VideoGate.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}